
@{
    ViewBag.Title = "CollegeManagement";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div ng-controller="CollegeCtrl">
    <div>
        <button ng-click="addCollege()" class="btn btn-info pull-right addpromocode">Add College</button>
    </div>
    <div class="row">
        <taalert />
    </div>
    <div class="table-responsive tablestyle">
        <table ng-table="tableParams" class="table table-bordered" style="margin-bottom: 0px">
            <tr ng-repeat="d in $data track by $index ">
                <td data-title="'S.No.'" style=" vertical-align: middle; width:10px">
                    <span ng-bind="$index+1"></span>
                </td>
                <td data-title="'College Name'" style=" vertical-align: middle;">
                    <span ng-bind="d.collegeName"></span>
                </td>
                <td data-title="'Actions'" style="vertical-align: middle;width:20%" class="action-button">
       
                    <div ng-click="editCollege(d)" class="button raised blue actionButton">
                        <div class="center" fit>Edit</div>
                        <paper-ripple fit></paper-ripple>
                    </div>

                    <div ng-click="ConfirmBox(d.pkCollegeId,2)" class="button raised red actionButton">
                        <div class="center" fit>Delete</div>
                        <paper-ripple fit></paper-ripple>
                    </div>
                    
                </td>
            </tr>
        </table>
    </div>

    <div id="collegeModal" class="modal fade" role="dialog" aria-labelledby="gridSystemModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="reset()"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="gridSystemModalLabel">{{collegeModel.pkCollegeId==null?"Add":"Update"}} College</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Enter College Name</label>
                            <input type="text" ng-model="collegeModel.collegeName" maxlength="20" placeholder="Enter College Name" class="form-control" />

                        </div>
                    </div>
                    
                </div><!-- /.modal-content -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" ng-click="reset()">Close</button>
                    <button type="button" ng-disabled="collegeModel.collegeName==null||collegeModel.collegeName==''" ng-click="saveCollege()" class="btn btn-primary">Save</button>
                </div>
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->
    </div>
</div>
@section js{
    <script src="~/Areas/Admin/AdminScripts/collegeCtrl.js"></script>
}





